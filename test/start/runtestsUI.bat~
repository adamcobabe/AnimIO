@ECHO OFF

REM call maya and use standard unittest testrunner to run UI given tests

set base=%~dp0

REM prepare the environment to use a minimal UI - put mayarv into the script path
REM as well as our helper script
set MAYA_SCRIPT_PATH=%base%;%base%..\..\..;%MAYA_SCRIPT_PATH%
set MAYARV_PYTHON_PATH=%base%..\..\..
set MAYA_OVERRIDE_UI=initialLayout_minimal.mel

REM assure we have no additional environment set
set MAYA_APP_DIR=%TMP%\maya_test_home
mkdir %MAYA_APP_DIR%

echo. >> %MAYA_APP_DIR%\Maya.env

IF "%*"=="" (
	set uiParam=etwas
	echo emptyEMPTYempty 
) ELSE (
	set uiParma=%*
)
echo %uiParam%, %MAYA_SCRIPT_PATH%, %MAYARV_PYTHON_PATH%

maya

REM execute mayarv
REM cmd.exe /C "%basedir%..\..\start\mayarv.bat %basedir%\nosestartup.py" %*

:end	